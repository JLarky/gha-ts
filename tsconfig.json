{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["bun-types", "node"],
    "baseUrl": ".",
    "allowJs": true,
    "checkJs": true,
    "paths": {
      "@jlarky/gha-ts": ["./src/index.ts"],
      "@jlarky/gha-ts/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts",
    "examples/**/*.ts",
    "examples/**/*.mjs",
    ".github/**/*.ts",
    ".github/**/*.mjs",
    "scripts/**/*.ts",
    "mise-tasks/**/*.ts"
  ]
}
